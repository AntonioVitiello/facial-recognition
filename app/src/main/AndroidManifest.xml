<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="av.demo.facereco">

    <!-- Permissions for auto-complete in login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--Permissions for accessing files read/write pictures -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--Permissions for accessing Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <!--Avoid warning: XML tag has empty body-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <!--Avoid warning: XML tag has empty body-->
        </activity>

        <activity
            android:name=".PersonalDataActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
            <!--Avoid warning: XML tag has empty body-->
        </activity>

        <activity
            android:name=".GalleryActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
            <!--Avoid warning: XML tag has empty body-->
        </activity>

        <activity
            android:name="com.wonderkiln.camerakit.demo.MainActivity"
            android:launchMode="singleTask">
            <!--Avoid warning: XML tag has empty body-->
        </activity>
        
        <activity
            android:name="com.wonderkiln.camerakit.demo.PreviewActivity"
            android:launchMode="singleTask" />
    </application>
</manifest>